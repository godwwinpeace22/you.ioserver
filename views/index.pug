extends layout
block content
  .home.col-sm-12
    if(msg)
      p.alert.alert-info #{msg}
    .main.col-sm-8
      if(articles)
        for article in articles
          article.panel.panel-default
            img(style='width:100%;height:250px;', src='/uploads/' + article.imgUrl)
            div.panel-heading
              h3
                a(href='/articles/' + article._id + '')=article.title
            div.panel-body
              p=article.body
            div.panel-footer
              span=article.date     
              span: a(href=`/profile/${article.author.username}`)=article.author.name    
              span=article.category    
              span=article.tags   
    .sidebar.col-sm-4
      h3.text-center Recent articles
      .col-xs-12
        if articles
          each article in articles
            div.thumbnl
              img(src='/uploads/' + article.imgUrl)
            div.thumb-txt
              h5
                a(href='/articles/' + article.title + '')=article.title
              p #{article.body}
      h3.text-center Most Popular
      .col-xs-12
        if articles
          each article in articles
            div.thumbnl
              img(src='/uploads/' + article.imgUrl)
            div.thumb-txt
              h5
                a(href='/articles/' + article.title + '')=article.title
              p #{article.body}
      h3.text-center Featured
      .col-xs-12
        if articles
          each article in articles
            div.thumbnl
              img(src='/uploads/' + article.imgUrl)
            div.thumb-txt
              h5
                a(href='/articles/' + article.title + '')=article.title
              p #{article.body}
